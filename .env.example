# HeroUI MCP Server Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./data/heroui.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=heroui
DB_USER=heroui
DB_PASSWORD=your_password_here

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/heroui.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security Configuration
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./data/storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Canvas Configuration
CANVAS_MAX_WIDTH=4096
CANVAS_MAX_HEIGHT=4096
CANVAS_MAX_FILE_SIZE=10485760

# Memory Management
MAX_MEMORY_USAGE=512
MEMORY_CHECK_INTERVAL=30000
SESSION_TTL=3600
CACHE_TTL=1800

# Development Configuration
DEBUG=heroui:*
HOT_RELOAD=true
AUTO_RESTART=true

# Production Configuration
CLUSTER_MODE=false
WORKER_PROCESSES=auto
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PROMETHEUS_PORT=9090

# External Services
WEBHOOK_URL=
NOTIFICATION_SERVICE_URL=
ANALYTICS_API_KEY=

# AI Service Configuration
AI_SERVICE=openai
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2048

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_GRAPHQL=false
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true

# Theme Configuration
DEFAULT_THEME=light
THEME_CACHE_TTL=3600

# Component Configuration
MAX_COMPONENTS_PER_PAGE=50
COMPONENT_CACHE_TTL=1800

# Template Configuration
TEMPLATE_CACHE_TTL=3600
MAX_TEMPLATE_SIZE=1048576
