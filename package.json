{
  "name": "heroui-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "description": "ðŸš€ HeroUI MCP Server - A Model Context Protocol server for creating and managing UI components efficiently",
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "bin": {
    "heroui-mcp-server": "dist/server/index.js",
    "heroui-init": "bin/heroui-init"
  },
  "directories": {
    "doc": "docs",
    "test": "tests",
    "lib": "src"
  },
  "scripts": {
    "check": "node scripts/check-server.js",
    "tools": "node scripts/tools.js",
    "tools:list": "node scripts/tools.js list",
    "tools:check": "node scripts/tools.js check",
    "init": "node scripts/init.js",
    "build": "tsc",
    "start": "node dist/server/index.js",
    "dev": "tsx src/dev-server.ts",
    "dev:smithery": "tsx src/smithery.ts",
    "generate": "node scripts/generate-tool.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run copy-assets",
    "copy-assets": "copyfiles -u 1 src/**/*.json src/**/*.yaml dist/",
    "db:migrate": "ts-node scripts/migrate.ts",
    "db:seed": "ts-node scripts/seed.ts",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "docs:build": "typedoc src --out docs/api",
    "docs:serve": "http-server docs -p 8080",
    "release": "standard-version",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "prepublishOnly": "npm run build && npm test",
    "docker:build": "docker build -t heroui-mcp-server .",
    "docker:run": "docker run -p 3000:3000 heroui-mcp-server",
    "gitbook:install": "gitbook install",
    "gitbook:build": "gitbook build",
    "gitbook:serve": "gitbook serve",
    "gitbook:deploy": "./scripts/deploy-gitbook.sh"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ui-components",
    "typescript",
    "fastify",
    "heroui",
    "component-builder",
    "layout-system",
    "theme-engine",
    "canvas-tools",
    "web-development",
    "frontend-tools"
  ],
  "author": {
    "name": "billlzzz10",
    "email": "billlzzz10@gmail.com",
    "url": "https://github.com/billlzzz10"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/billlzzz10/heroui-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/billlzzz10/heroui-mcp-server/issues"
  },
  "homepage": "https://github.com/billlzzz10/heroui-mcp-server",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/swagger": "^9.1.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "canvas": "^2.11.2",
    "dotenv": "^16.4.5",
    "fastify": "^5.6.1",
    "lodash": "^4.17.21",
    "openai": "^4.104.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.2.2",
    "redis": "^4.7.0",
    "sharp": "^0.33.5",
    "sqlite3": "^5.1.7",
    "typescript": "^5.6.3",
    "uuid": "^10.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/lodash": "^4.17.10",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "conventional-changelog-cli": "^4.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.1.0",
    "standard-version": "^9.5.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typedoc": "^0.25.13"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    },
    "env": {
      "node": true,
      "jest": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "standard-version": {
    "scripts": {
      "prebump": "npm test",
      "postbump": "npm run build"
    }
  }
}
